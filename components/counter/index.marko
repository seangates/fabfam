import store from 'store';
import { autorun } from 'mobx';

class {
  onCreate() {
    this.state = { count:0 };
  }
  onMount() {
    autorun(() => {
      this.state = { count: store.counter }
      this.forceUpdate();
    });
  }
  increment() {
    store.increment();
  }
}

style {
  .count {
    font-size:3em;
  }
  .example-button {
    font-size:1em;
    padding:0.5em;
  }
}

<h1 class="title">Here be dragons!</h1>
<h2 class="subtitle">
  Experience Huncwot magic and carefully follow the instruction.
</h2>

<div.count>
  <p class="title count">${state.count}</p>
</div>
<button.is-danger.button.is-outlined on-click('increment')>
  Click me!
</button>
